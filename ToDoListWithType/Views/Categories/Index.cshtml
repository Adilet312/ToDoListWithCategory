@{
  Layout = "_Layout";
}
@using ToDoListWithType.Models;
@model List<ToDoListWithType.Models.Category>;
<h1>Categories</h1>
@if(@Model.Count==0)
{
    <h4>There is no categories in our list.</h4>
}
<ul> 
  @foreach(Category category in Model)
  {
      <li>@Html.ActionLink($"{category.name}",  "Details", new { id = category.CategoryId })</li>
  }
</ul>
<hr/>
<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Return Home Page","Index","Home")</p>

