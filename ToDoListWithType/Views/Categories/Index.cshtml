@using ToDoListWithType.Models;
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Create a Custom Postcard!</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
<h1>To Do List Of Categories</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
    @foreach (Category category in Model )
    {
      
        <h3><a href="/categories/@category.Id" >@category.getName()</a></h3>
    }
  
</ul>
<a href="/categories/new">Add a new Category.</a>
<form action="/categories/delete" method="post">
  <button type="submit" class="btn btn-info" name="button">Clear All Categories</button>
</form>
<form action="/categories/{id}" method="get">
  <label for="categoryId">Find Category by ID</label>
  <input id="categoryId" name="id" type="number">
  <button type="submit" class="btn btn-info" >FindCategory</button>
</form>
@* <a href="/toDoListPath/new">Add a new item.</a> *@
@* <a href="/">Go Home</a> *@
</body>
</html>