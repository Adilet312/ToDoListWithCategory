@{
  Layout = "_Layout";
}
@using ToDoListWithType.Models;
<center>
<h2>To Do Lists Of Category</h2>
    @if (Model.Count == 0)
    {
      <p>There are no to do lists in a category.</p>
    }
<ul>
    @foreach (Category category in Model )
    {
      
        <h3><a href="/categories/@category.Id" >Id# @category.Id. @category.getName()</a></h3>
    }
  
</ul>
<br>
<br>
<br>
<hr/>
    <a href="/categories/new">Add a new Category.</a>
<br>
<hr/>
    <form action="/categories/delete" method="post">
      <button type="submit" class="btn btn-info" name="button">Clear All Categories</button>
    </form>
<br>
<hr/>
   <form action="/categories/search" method="get">
    <label for="givenID">Find Category by ID</label>
    <input id="givenID" name="givenID" type="number">
    <button type="submit" class="btn btn-info" >Find Category</button>
  </form>
</center>

