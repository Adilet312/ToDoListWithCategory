@{
  Layout = "_Layout";
}

@using ToDoListWithType.Models;
@model ToDoListWithType.Models.Category;

<hr/>
<h3>@Html.DisplayNameFor(model => model.name): @Html.DisplayFor(model => model.name)</h3>

<ul>
    @if(@Model.Items.Count == 0)
    {
        <p>no items found </p>
    }
    @foreach(Item item in @Model.Items)
    {
        <li>Description: @item.description</li>
    }
</ul>
<p>@Html.ActionLink("Add new  Item","Create","Items")</p>
<p>@Html.ActionLink("Update category","Update",new {CategoryID=Model.CategoryId})</p>
<p>@Html.ActionLink("Delete category","Remove",new {idForDeleting=Model.CategoryId})</p>

<p>@Html.ActionLink("Back to list of categories","Index")</p>
