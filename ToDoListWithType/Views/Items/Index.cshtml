@{
  Layout = "_Layout";
}

@using ToDoListWithType.Models;
@model List<ToDoListWithType.Models.Item>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach (Item item in Model)
{
  <li>@Html.ActionLink($"{item.description}", "Details", new { idForItems = item.ItemId }) | @item.Category.name</li>
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Back to List of Categories", "Index","Categories")</p>
<p>@Html.ActionLink("Back to Home Page", "Index","Home")</p>