@{
  Layout = "_Layout";
}
@using ToDoListWithType.Models;
<center>
<h1>To Do List</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
    @foreach (Item item in Model )
    {
      
        <h3> @item.getDescription()</h3>
    }
  
</ul>
<br>
<br>
<br>
<br>
<hr/>
<a href="/items/new">Add a new Item.</a>
<form action="/items/delete" method="post">
  <button type="submit" class="btn btn-info" name="button">Clear All Items</button>
</form>
</center>